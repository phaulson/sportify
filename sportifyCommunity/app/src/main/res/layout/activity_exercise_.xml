<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spogss.sportifycommunity.activity.ExerciseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/feed_margin_large"
            android:layout_marginBottom="@dimen/feed_margin_medium"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="@dimen/plan_text_size_name" />

        <TextView
            android:id="@+id/textView_exercise_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/feed_margin_medium"
            android:layout_marginEnd="@dimen/feed_margin_medium"
            android:layout_marginBottom="@dimen/feed_margin_medium"
            android:textSize="@dimen/exercise_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/feed_margin_large"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_exercise_1"
                android:layout_width="@dimen/image_plan_square_dimen"
                android:layout_height="@dimen/image_plan_square_dimen"
                android:contentDescription="@string/image_exercise_description"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/imageView_exercise_2"
                android:layout_width="@dimen/image_plan_square_dimen"
                android:layout_height="@dimen/image_plan_square_dimen"
                android:contentDescription="@string/image_exercise_description"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
